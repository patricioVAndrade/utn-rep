---
/**
 * Top navigation row that lives INSIDE each page's colored <header>.
 * Includes: Home link, Dark mode toggle, Login/User greeting.
 */
interface Props {
  user?: {
    name: string;
    avatar?: string;
  } | null;
}

const { user = null } = Astro.props;

// Time-based greeting
const hour = new Date().getHours();
let greeting: string;
if (hour >= 6 && hour < 12) greeting = 'Buenos días';
else if (hour >= 12 && hour < 19) greeting = 'Buenas tardes';
else greeting = 'Buenas noches';
---

<div class="flex items-center justify-between mb-4">
  <a href="/" class="flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm font-semibold">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
    Inicio
  </a>

  <div class="flex items-center gap-3">
    {user ? (
      <div class="flex items-center gap-2.5">
        {user.avatar ? (
          <img src={user.avatar} alt={user.name} class="w-8 h-8 rounded-full border-2 border-white/30 object-cover" />
        ) : (
          <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center text-sm font-bold text-white">
            {user.name.charAt(0).toUpperCase()}
          </div>
        )}
        <span class="text-sm font-medium text-white/80 hidden sm:inline">
          {greeting}, <strong class="text-white">{user.name}</strong>
        </span>
        <a href="/api/auth/logout" class="ml-1 text-white/50 hover:text-white transition-colors" title="Cerrar sesión">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
        </a>
      </div>
    ) : (
      <button id="login-btn" class="flex items-center gap-1.5 text-sm font-semibold bg-white/15 hover:bg-white/25 backdrop-blur text-white px-4 py-2 rounded-xl transition-colors cursor-pointer">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        Iniciar Sesión
      </button>
    )}
  </div>
</div>

<!-- Login Modal -->
{!user && (
  <div id="login-modal" class="fixed inset-0 z-[100] hidden items-center justify-center bg-black/50 backdrop-blur-sm">
    <div class="bg-[#242424] rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 relative transition-all duration-300 ease-in-out">
      <button id="close-modal" class="absolute top-4 right-4 text-neutral-400 hover:text-neutral-200 cursor-pointer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="text-xl font-heading font-extrabold text-white mb-2">Iniciar Sesión</h2>
      <p class="text-sm text-neutral-400 mb-1">Elegí cómo querés ingresar</p>
      <p class="text-xs text-neutral-500 mb-5">Tu nombre no se mostrará si elegís publicar como anónimo.</p>

      <!-- Tabs -->
      <div class="flex border-b border-neutral-700 mb-5">
        <button id="tab-email" class="flex-1 pb-2.5 text-sm font-semibold text-amber-400 border-b-2 border-amber-400 transition-all cursor-pointer">
          <span class="flex items-center justify-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            Email
          </span>
        </button>
        <button id="tab-social" class="flex-1 pb-2.5 text-sm font-semibold text-neutral-500 border-b-2 border-transparent hover:text-neutral-300 transition-all cursor-pointer">
          <span class="flex items-center justify-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
            Google / GitHub
          </span>
        </button>
      </div>

      <!-- Tab: Email (Magic Link) -->
      <div id="panel-email" class="min-h-[320px]">
        <div class="space-y-3">
          <div>
            <label for="ml-nombre" class="block text-xs font-semibold text-neutral-400 mb-1.5">Nombre y apellido</label>
            <input 
              type="text" 
              id="ml-nombre" 
              placeholder="Juan Pérez"
              autocomplete="name"
              class="w-full px-4 py-2.5 rounded-xl border border-neutral-600 bg-[#1a1a1a] text-neutral-100 text-sm focus:outline-none focus:ring-2 focus:ring-amber-400/50 focus:border-amber-400 transition-all placeholder:text-neutral-600"
            />
          </div>
          <div>
            <label for="ml-email" class="block text-xs font-semibold text-neutral-400 mb-1.5">Email</label>
            <input 
              type="email" 
              id="ml-email" 
              placeholder="tu@gmail.com"
              autocomplete="email"
              class="w-full px-4 py-2.5 rounded-xl border border-neutral-600 bg-[#1a1a1a] text-neutral-100 text-sm focus:outline-none focus:ring-2 focus:ring-amber-400/50 focus:border-amber-400 transition-all placeholder:text-neutral-600"
            />
          </div>
          <p id="ml-hint" class="text-xs text-neutral-500">
            Si usás tu email de UTN (<strong class="text-amber-400/80">@frc.utn.edu.ar</strong>) tu reseña tendrá un badge de alumno verificado.
          </p>
          <div class="flex items-start gap-2 bg-neutral-800/50 rounded-lg px-3 py-2.5 border border-neutral-700/50">
            <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
            <p class="text-[11px] text-neutral-400 leading-relaxed">
              <strong class="text-neutral-300">Sin contraseña.</strong> Te enviaremos un link seguro a tu email para ingresar. No almacenamos ni pedimos contraseñas.
            </p>
          </div>
          <button 
            id="ml-submit" 
            class="w-full flex items-center justify-center gap-2 bg-gradient-to-r from-amber-500 to-amber-600 hover:opacity-90 text-white font-bold text-sm px-5 py-3 rounded-xl transition-all cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            Enviar link de acceso
          </button>
          <div id="ml-msg" class="hidden text-sm text-center rounded-xl px-4 py-3"></div>
        </div>
      </div>

      <!-- Tab: Social (Google / GitHub) -->
      <div id="panel-social" class="hidden min-h-[320px]">
        <div class="space-y-3 pt-10">
          <a id="oauth-google" href="/api/auth/login?provider=google" class="w-full flex items-center gap-3 px-5 py-3 border-2 border-neutral-600 rounded-xl hover:border-amber-400 hover:bg-amber-900/20 transition-all cursor-pointer text-left no-underline">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span class="font-semibold text-neutral-200">Continuar con Google</span>
          </a>

          <a id="oauth-github" href="/api/auth/login?provider=github" class="w-full flex items-center gap-3 px-5 py-3 border-2 border-neutral-600 rounded-xl hover:border-neutral-400 hover:bg-neutral-700 transition-all cursor-pointer text-left no-underline">
            <svg class="w-5 h-5 fill-white" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            <span class="font-semibold text-neutral-200">Continuar con GitHub</span>
          </a>
        </div>

        <p class="text-xs text-neutral-500 mt-4 text-center">
          Solo usamos tu nombre y foto de perfil. No publicamos nada en tu cuenta.
        </p>
      </div>
    </div>
  </div>
)}

<!-- End HeaderNav -->
