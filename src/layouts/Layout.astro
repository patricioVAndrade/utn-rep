---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro'

interface Props {
  title: string;
  description?: string;
  /** Extra padding en el footer para botones flotantes */
  hasFloatingButton?: boolean;
}

const {
  title,
  description = 'Reseñas y opiniones reales de materias, cátedras y profesores de Ingeniería en Sistemas — UTN FRC. Elegí mejor tu cursada.',
  hasFloatingButton = false,
} = Astro.props;
const canonicalURL = Astro.url.href;
const siteURL = Astro.url.origin;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="keywords" content="UTN FRC, reseñas materias UTN, opiniones cátedras UTN, ingeniería en sistemas, UTN Córdoba, cursada UTN, profesores UTN FRC, materias sistemas UTN" />
    <meta name="author" content="Patricio Valentín Andrade" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="es_AR" />
    <meta property="og:site_name" content="UTN REP" />
    <meta property="og:image" content={`${siteURL}/og-image.png`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteURL}/og-image.png`} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@500;600;700;800&family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>{title}</title>
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "UTN REP",
      "url": siteURL,
      "description": "Reseñas y opiniones de materias, cátedras y profesores de Ingeniería en Sistemas de la UTN FRC.",
      "inLanguage": "es-AR",
      "publisher": {
        "@type": "Organization",
        "name": "UTN REP"
      }
    })} />
  </head>
  <body class="bg-[#1a1a1a] text-neutral-300 antialiased min-h-screen flex flex-col" style="font-family: 'Inter', system-ui, sans-serif;">
    
    <slot />

    <Analytics />

    <!-- Footer -->
    <footer class={`bg-[#111111] text-neutral-500 mt-auto ${hasFloatingButton ? 'pb-24 sm:pb-8' : ''}`}>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <div class="text-center sm:text-left">
            <a href="/" class="font-heading font-bold text-white text-lg tracking-tight hover:text-amber-400 transition-colors">UTN REP</a>
            <p class="text-sm mt-1">Tu opinión cuenta. Conocé la experiencia real de cada materia.</p>
          </div>
          <div class="flex items-center gap-4 text-sm">
            <a href="/sobre" class="hover:text-white transition-colors">Sobre UTN REP</a>
            <a href="/terminos" class="hover:text-white transition-colors">Términos Y Condiciones</a>
            <a href="https://github.com/patricioVAndrade" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors" title="GitHub">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"></path></svg>
            </a>
          </div>
        </div>
        <div class="border-t border-neutral-800 mt-6 pt-6 text-center text-xs">
          <p>Hecho por <span class="text-neutral-300 font-medium">Patricio Valentín Andrade</span> &mdash; {new Date().getFullYear()}</p>
        </div>
      </div>
    </footer>

  </body>
</html>

<script>
  // ========== LOGIN MODAL ==========
  function initLoginModal() {
    const loginBtn = document.getElementById('login-btn');
    const loginBtnMain = document.getElementById('login-btn-main');
    const modal = document.getElementById('login-modal');
    const closeBtn = document.getElementById('close-modal');

    if (!modal) return;

    function openModal() {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    loginBtn?.addEventListener('click', openModal);
    loginBtnMain?.addEventListener('click', openModal);

    closeBtn?.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  }

  initLoginModal();
</script>
