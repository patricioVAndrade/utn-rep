---
import { supabase } from '../../lib/supabase';
import '../../styles/global.css';

// Obtener el par√°metro de la URL
const { nivel } = Astro.params;
const nivelNum = parseInt(nivel || '1');

// Validar que sea un nivel v√°lido (1-5)
if (isNaN(nivelNum) || nivelNum < 1 || nivelNum > 5) {
  return Astro.redirect('/');
}

// Consultar materias de este nivel
const { data: materias, error } = await supabase
  .from('materias')
  .select('id, nombre, nivel')
  .eq('nivel', nivelNum)
  .order('nombre');

if (error) {
  console.error("Error trayendo materias:", error.message);
}

const nivelesInfo: Record<number, { label: string; icon: string; color: string }> = {
  1: { label: "1er A√±o", icon: "üìò", color: "from-blue-500 to-blue-600" },
  2: { label: "2do A√±o", icon: "üìó", color: "from-green-500 to-green-600" },
  3: { label: "3er A√±o", icon: "üìô", color: "from-orange-500 to-orange-600" },
  4: { label: "4to A√±o", icon: "üìï", color: "from-red-500 to-red-600" },
  5: { label: "5to A√±o", icon: "üìì", color: "from-purple-500 to-purple-600" },
};

const infoNivel = nivelesInfo[nivelNum];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>Materias de {infoNivel.label} - UTN Reviews</title>
  </head>
  <body class="bg-gradient-to-br from-slate-50 to-slate-100 text-gray-800 antialiased min-h-screen" style="font-family: 'Inter', sans-serif;">
    
    <!-- Header -->
    <header class={`bg-gradient-to-r ${infoNivel.color} text-white`}>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
        <a href="/" class="inline-flex items-center gap-2 text-white/80 hover:text-white mb-4 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver al inicio
        </a>
        <div class="flex items-center gap-4">
          <span class="text-5xl">{infoNivel.icon}</span>
          <div>
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight">
              {infoNivel.label}
            </h1>
            <p class="text-white/80 mt-2">
              {materias?.length || 0} materias encontradas
            </p>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
      
      {materias && materias.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {materias.map((materia) => (
            <a 
              href={`/materia/${materia.id}?from=nivel`} 
              class="group bg-white p-5 sm:p-6 rounded-2xl border border-gray-100 hover:border-indigo-200 hover:shadow-xl transition-all duration-300"
            >
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1 min-w-0">
                  <h3 class="font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                    {materia.nombre}
                  </h3>
                  <div class="flex items-center gap-2 mt-2">
                    <span class="text-xs text-yellow-600 flex items-center gap-1">
                      ‚≠ê 4.2
                    </span>
                    <span class="text-xs text-gray-400">
                      ‚Ä¢ 8 rese√±as
                    </span>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-300 group-hover:text-indigo-500 group-hover:translate-x-1 transition-all flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <span class="text-6xl mb-4 block">üì≠</span>
          <h2 class="text-xl font-bold text-gray-700 mb-2">No hay materias cargadas</h2>
          <p class="text-gray-500">Todav√≠a no hay materias registradas para este nivel.</p>
        </div>
      )}

      <!-- Navegaci√≥n entre niveles -->
      <nav class="mt-12 pt-8 border-t border-gray-200">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Otros niveles</h3>
        <div class="flex flex-wrap gap-3">
          {[1, 2, 3, 4, 5].filter(n => n !== nivelNum).map((n) => (
            <a 
              href={`/nivel/${n}`}
              class={`bg-gradient-to-br ${nivelesInfo[n].color} text-white px-4 py-2 rounded-xl font-semibold hover:scale-105 transition-all shadow-md`}
            >
              {nivelesInfo[n].icon} {nivelesInfo[n].label}
            </a>
          ))}
        </div>
      </nav>

    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-400 mt-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <div class="text-center sm:text-left">
            <p class="font-bold text-white">UTN Reviews</p>
            <p class="text-sm">Hecho por estudiantes, para estudiantes</p>
          </div>
          <div class="flex gap-6 text-sm">
            <a href="/" class="hover:text-white transition-colors">Inicio</a>
            <a href="/sobre-nosotros" class="hover:text-white transition-colors">Sobre Nosotros</a>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
